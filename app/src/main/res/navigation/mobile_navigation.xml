<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_smart_search_home">

    <fragment
        android:id="@+id/navigation_smart_search_home"
        android:name="smart.estate.app.presentation.smart.search.SmartSearchFragment"
        android:label="title_home"
        tools:layout="@layout/fragment_smart_search" />

    <fragment
        android:id="@+id/navigation_classical_search"
        android:name="smart.estate.app.presentation.classical.search.ClassicalSearchFragment"
        android:label="title_classical_search"
        tools:layout="@layout/fragment_classical_search" />

    <fragment
        android:id="@+id/navigation_add_estate"
        android:name="smart.estate.app.presentation.add.estate.AddEstateFragment"
        android:label="title_add_estate"
        tools:layout="@layout/fragment_add_estate" />

    <fragment
        android:id="@+id/navigation_favourites"
        android:name="smart.estate.app.presentation.favourites.FavouritesFragment"
        android:label="title_favourites"
        tools:layout="@layout/fragment_favourites" />

    <fragment
        android:id="@+id/navigation_user"
        android:name="smart.estate.app.presentation.user.UserFragment"
        android:label="title_user"
        tools:layout="@layout/fragment_user" />

</navigation>